@import "functions"

/* GENERIC STYLES */

.hidden
  display none

.error
  color red


/* HOME PAGE AND STATIC CONTENT */

.home-main
  width 920px     
  min-height 400px
  margin 0 auto
  padding-top 10px

  h1 
    margin-top 20px
    margin-bottom 10px
    line-height 110%
    font-size 20pt

  h2
    margin-top 10px
    margin-bottom 10px
    font-size 16pt

  h3
    margin-top 5px
    margin-bottom 5px
    font-size 14pt

  p
    margin-top 5px

.home-header-wrap
  border-bottom medium none
  background #EEE
  border-color #E9E9E9 #E9E9E9 #F5F5F5
  border-radius 5px 5px 5px 5px
  box-shadow 0 1px 1px rgba(0,0,0,0.2)

.home-header
  width 920px
  height 70px
  margin 0 auto

.home-header-title
  font normal 28pt Impact
  padding-left 20px
  padding-top 5px
  text-align left
  float left

  a
    color #222
    text-decoration none
    outline 0

.header-menu-bar
  float right    
  font-size 120%
  padding 8px 25px 8px 8px
  margin-right 20px

  -moz-border-bottom-colors none
  -moz-border-image none
  -moz-border-left-colors none
  -moz-border-right-colors none
  -moz-border-top-colors none

  gradient(270deg, #FCFCFC, 0%, #ECECEC, 100%)
  border-color #E9E9E9 #E9E9E9 #F5F5F5
  border-radius 0px 0px 5px 5px
  box-shadow 0 1px 1px rgba(0,0,0,0.2)

  text-align left
  text-shadow 1px 1px 0 #FFFFFF

  span
    float left
    padding 0px 8px 0px 8px
    color #888
    text-shadow none

  a 
    float left
    color #4183C4
    text-decoration none
    outline 0

.home-about 
  margin -12px 0px 15px 0px
  padding 0
  width 920px

  h2
    height auto
    margin 0 auto
    position relative
    text-align center
    display block

    padding 10px 20px 12px 20px
    border-top-left-radius 3px
    border-top-right-radius 3px
    background repeat scroll 0 0 transparent
    gradient(top, #839BA9, 0%, #405A6A, 100%)

    color #FFFFFF
    text-shadow -1px -1px 0 rgba(0,0,0,0.2)
    font normal 20px "Georgia"
    letter-spacing 0

  a
    color #DDD

.home-flash
  background-color #EEE
  position relative
  text-align center
  margin 0 auto
  width 80%
  padding 10px 10px 10px 10px
  font-style italic
  border 1px solid

.home-logos

  img
    verticle-align middle
    margin-left 100px
    max-width 200px
    max-height 120px

.home-details
  margin 20px 20px 20px 0px
    
.home-detail
  float left
  width 200px
  margin 0px 30px 20px 45px
  padding 10px 10px 10px 10px
  color #222

  .home-detail-link
    text-decoration underline
    color #506A7A
    outline 0

  h2
    width 200px
    padding 0px 10px 10px 10px
    margin-top 0px
    margin-bottom 0px

    font-size 14pt
    font-weight 700
    font-style normal

  p
    color #666666
    background #fff
    width 198px
    padding 5px 10px 0px 10px
    margin-top 0
    font-size 10pt
    font-weight 400
 

.footer
  padding 15px 0px 15px 0px
  margin-top 30px
  margin-bottom 40px
  background-color #F6F6F6
  border 1px solid #DDD

.footer-bar
  text-align center
  vertical-align middle
  color #838383

  a.footer-link
    font-size small
    padding 0px 8px 0px 8px
    text-decoration none

  p
    font-size x-small

    a
      color #838383

/* FORMS */

.form-field

  .head
    display block
    width 100px
    margin-right 30px

  input
    width 600px

  textarea
    width 600px
    height 300px

/* ARTICLES */

.admin-link
  float right

.article
  width 600px
  padding-bottom 40px
  padding-top 10px

  h2
    margin-top 15px
    margin-bottom 7px

  h3
    margin-top 15px
    margin-bottom 10px

  p  
    margin-bottom 5px

  ol
    margin-left 10px
  
  ul
    margin-left 2px

  li
    margin-top 4px
  
  img
    border 1px solid
    padding 5px 5px 5px 5px
    margin-top 20px
    margin-left 10px

  blockquote
    margin 5px 0px 10px 10px
    padding-left 10px
    border-left 4px solid gray
    font-style ariel

/* DISCUSSION WIDGET */

div.comment-form textarea
  min-width 400px
  min-height 100px

div.discussion
  margin-left 30px

.discussion-byline
  font-size 80%

div.discussion-0
  margin-left 0px
  p 
    font-weight bold
    font-size 120%

div.discussion-1 p
  font-weight normal
  font-size 100%

/* STUDY 1 */

.study1-author

  .head
    margin-top 10px
    width 500px

  label
    font-weight bold
 
  i
    font-size x-small
