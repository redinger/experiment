gen-border-radius()
  border-radius arguments
  -webkit-border-radius arguments
  -moz-border-radius arguments

gen-box-shadow()
  -moz-box-shadow arguments
  -webkit-box-shadow arguments
  box-shadow arguments

gen-border-top-left-radius()
  -webkit-border-top-left-radius arguments
  -moz-border-radius-topleft arguments

gen-border-top-right-radius()
  -webkit-border-top-right-radius arguments
  -moz-border-radius-topright arguments

gen-border-bottom-left-radius()
  -webkit-border-bottom-left-radius arguments
  -moz-border-radius-bottomleft arguments

gen-border-bottom-right-radius()
  -webkit-border-bottom-right-radius arguments
  -moz-border-radius-bottomright arguments

gradient(location, start, end)
  background-color start
  background -moz-linear-gradient(location, start, end)
  background -webkit-linear-gradient(location, start, end)
  background -ms-linear-gradient(location, start, end)

blue-gradient()
  background #7abcff
  background -moz-linear-gradient(top, #7abcff 0%, #60abf8 44%, #4096ee 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#7abcff), color-stop(44%,#60abf8), color-stop(100%,#4096ee))
  background -webkit-linear-gradient(top, #7abcff 0%,#60abf8 44%,#4096ee 100%)
  background -o-linear-gradient(top, #7abcff 0%,#60abf8 44%,#4096ee 100%)
  background -ms-linear-gradient(top, #7abcff 0%,#60abf8 44%,#4096ee 100%)
  background linear-gradient(top, #7abcff 0%,#60abf8 44%,#4096ee 100%)

