.filter-guide
  font-size x-small
  font-family "Verdana"
  margin-left 10px


/*** Trial View ***/

.trial-calendar-wrap
  margin-top 20px
  margin-left 40px
  float left

.trial-measures
  margin-top 20px
  margin-left 80px
  margin-botton 30px
  float left

  span.variable
    display inline
    text-align leftt

  span.type
    margin-left 30px
    text-align left

  ul
    height: 173px
    margin-top 10px
    border 1px solid
    background #CCC
    list-style-type none

    li 
      width 250px
      background #EEE
      border-bottom 1px
      margin-left 0


.journal
  width 90%
  margin-left 2.5%
  gen-border-radius 5px 5px 5px 5px
  gen-box-shadow(2px, 2px, 2px, rgba(0,0,0,0.3))
  padding 10px 10px 10px 10px  
  background #EEE
  min-height 200px

  div.create
    position absolute
    bottom 20px

  div.edit

    textarea
      resize none
      width 100%
      height 100%
      margin-bottom 5px
      margin-top 5px

  div.paging
    float right
    
  h3
    font-size 8pt
    font-weight 700

    
  p 
    font-size 10pt
    font-family Helvetica, serif
