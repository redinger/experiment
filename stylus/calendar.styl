@import "functions"

#calendar-pane
  min-height: 300px

  .cal-header
    margin-bottom -16px

.calendar 
  table
    border-collapse separate
    border 1px solid #9DABCE
    border-width 0px 0px 1px 1px
    font-size 8px

  td, th
    width 40px
    height 40px
    text-align center
    vertical-align middle
    background url(/img/cells.png)
    color #444
    position relative

  th
    height 15px
    font-weight bold
    font-size 8px

  td:hover, th:hover
    background-position 0px -81px 
    color #222

  td.date_has_event
    background-position 243px 0px

  td.date_has_event:hover
    background-position 243px -81px

  td.today
    background-position 163px 0px
    color white

  td.today:hover
    background-position 163px -81px

  td.treat
    background-position 81px 0px
    color white

  td.treat:hover
    background-position 81px -81px

  td.padding
    background url(/img/calpad.jpg)

